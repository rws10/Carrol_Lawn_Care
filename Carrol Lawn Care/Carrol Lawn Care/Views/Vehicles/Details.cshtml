@model Carrol_Lawn_Care.Models.Vehicle

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.licPlate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.licPlate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TblEquip.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TblEquip.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TblEquip.type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TblEquip.type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TblEquip.fuelType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TblEquip.fuelType)
        </dd>

    </dl>

    <h5>Assigned Properties:</h5>

    @{foreach (var prop in (IEnumerable<Carrol_Lawn_Care.Models.Prop>)ViewBag.Properties)
        {
            <dl class="dl-horizontal">
                <dd>
                    @Html.ActionLink(@Html.DisplayName(prop.address).ToString(), "Details", "Props", new { id = prop.propId }, null)
                </dd>
            </dl>
        }
    }

    <h5>Tools Assigned:</h5>

    @{foreach (var tool in (IEnumerable<Carrol_Lawn_Care.Models.Tool>)ViewBag.Tools)
        {
            <dl class="dl-horizontal">
                <dd>
                    @Html.ActionLink(@Html.DisplayName(tool.TblEquip.name).ToString(), "Details", "Tools", new { id = tool.toolId}, null)
                </dd>
            </dl>
        }
    }

    <h5>Employees Assigned:</h5>

    @{foreach (var employee in (IEnumerable<Carrol_Lawn_Care.Models.Employee>)ViewBag.Employees)
        {
            <dl class="dl-horizontal">
                <dd>
                    @Html.ActionLink(@Html.DisplayName(employee.TblPer.name).ToString(), "Details", "Employees", new { id = employee.empId}, null)
                </dd>
            </dl>
        }
    }

    <h5>Maintenance Records:</h5>

    @{foreach (var rec in (IEnumerable<Carrol_Lawn_Care.Models.MaintenanceRecord>)ViewBag.Records)
        {
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName(rec.maintType)
                </dt>
                <dd>
                    @Html.ActionLink(@Html.DisplayName(rec.date.ToLongDateString()).ToString(), "Details", "MaintenanceRecords", new { id = rec.maintId}, null)
                </dd>

            </dl>
        }
    }

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.vehId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
